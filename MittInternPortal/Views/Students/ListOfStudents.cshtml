@model IEnumerable<MittInternPortal.Models.Student>
@{
    ViewBag.Title = "ListOfStudents";
}

<h2>ListOfStudents</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>JobList</title>

    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

</head>
<body class="col-md-12 ftco-animate">

    <table id="table" class="display">
        <thead>
            <tr>
                <th>
                    FullName
                </th>

                <th>
                    InstructorName
                </th>
                <th>
                    Address
                </th>
                <th>
                    BirthDate
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Contact
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instructor.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Students", new { id = item.Id }, null) |
                        @Html.ActionLink("Apply Now", "Apply", new { id = item.Id }) |

                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th>
                    FullName
                </th>

                <th>
                    InstructorName
                </th>
                <th>
                    Address
                </th>
                <th>
                    BirthDate
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Contact
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
    <script>
        $(document).ready(function () {
            $("#table").DataTable();

        });
    </script>
</body>
</html>